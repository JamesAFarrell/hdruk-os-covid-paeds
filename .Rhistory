n_max = 1,
col_names = FALSE
))) %>%
mutate(column_type = case_when(
column_names == "patient_id" ~ "i",
str_detect(column_names, "age") ~ "d",
str_detect(column_names, "_date") ~ "D",
str_detect(column_names, "_count") ~ "i",
TRUE ~ "c"
))
# Read data from csv ----
data_patient = read_csv(
